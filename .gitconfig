[user]
	name = Yuval Gnessin
	email = yuval@autolist.com
[core]
	editor = sublime -w
[credential]
	helper = cache
[apply]
    whitespace = fix

[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    untracked = magenta
[alias]
	unadd = reset HEAD
    exclude = "!f() { echo $1 >> .git/info/exclude; }; f"
    ignore = "!f() { echo $1 >> .gitignore; }; f"
    ch = checkout
    chb = checkout -b
[merge]
	tool = ksdiff
[diff]
	tool = ksdiff
[push]
	default = simple
